<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="125dp"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@color/page_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/shopping_car_edit_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:button="@null"
            android:checked="true"
            android:gravity="center|right"
            android:padding="20dp" />

        <ImageView
            android:id="@+id/shopping_car_edit_itemImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2.5"
            android:src="@drawable/home_fish" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="horizontal" >

                <!-- 商品名 -->

                <TextView
                    android:id="@+id/orderHome_item_shopName"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:text="海豚"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <!-- 价格标签 -->

                <TextView
                    android:id="@+id/orderHome_item_shopPrice_Title1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="0.3dp"
                    android:layout_weight="0.5"
                    android:gravity="center|right"
                    android:text="￥"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <!-- 商品单位价格 -->

                <TextView
                    android:id="@+id/orderHoem_item_shopPrice"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center|right"
                    android:text="4.5"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <!-- 商品单位计价法式 -->

                <TextView
                    android:id="@+id/orderHome_item_shopPrice_Title2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.2"
                    android:gravity="left|center"
                    android:text="斤"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" >

                    <!-- 商品规格 -->

                    <TextView
                        android:id="@+id/orderHome_item_shopSize_Title"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center|left|bottom"
                        android:text="规格："
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
                <!-- 商品的规格与数量 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5" >

                    <TextView
                        android:id="@+id/orderHome_item_shopSize"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:singleLine="true"
                        android:text="中等大小（1斤-3斤）"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/orderHome_item_shopNumber_Title"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.5"
                        android:gravity="center|right"
                        android:text="X"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/orderHome_item_shopNumber"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5"
                        android:gravity="center|left"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>